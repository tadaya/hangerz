body, html {
  height: 100%;
  width: 100%;
  margin: 0px;
  padding: 0px;
  border: 0px;

}

.page_wrapper {
  background-color: white;
  height: 100%;
  width: 100%;
  margin: 0px;
  padding: 0px;
  border: 0px;
  font-family: "Spinnaker";
}

/******* SPLASH PAGE ******/
.splash {
  text-align: center;
  color: black;
  height: 100%;
  width: 100%;
  background-image: url("black_geo.jpg");
}

.splash_black_bar{
  background-color: black;
  width: 100%;
  height: 40%;
}

.top{
  height: 25%;
  background-image: url("black_geo.jpg");
}

.bottom{
  height:30%;
  background-image: url("black_geo.jpg");
}

.splash_title {
  font-size: 120px;
  color: white;
}

.login_signup_panel {
  display: block;
  color: white;
  width: 100%;
  font-size: 20px;
}

.button{
  font-family: "Spinnaker";
  font-size: 16px;
  background-color: white;
}
/*************/

header {
  background-color: black;
  padding: 0px;
  border: 0px;
  border: 1px solid red;
}

.site_title {
  font-family: "Spinnaker";
  font-size: 80px;
  color: white;
  border: 1px solid red;
  display: inline-block;
}

.nav {
  float: right;
  font-family: "Spinnaker";
  padding-right: 20px;
  padding-top: 20px;
  color: white;
  border: 1px solid red;
}

.piece_view {
  height: 500px;
  width: 200px;
  background-size: 200px auto;
  background-repeat: no-repeat;
  border: 1px solid red;
  display: inline-block;
}