body, html {
  height: 100%;
  width: 100%;
  margin: 0px;
  padding: 0px;
  border: 0px;
}

.page_wrapper {
  background-color: white;
  height: 100%;
  width: 100%;
  font-family: "Spinnaker";
}

a {
  color: black;
  text-decoration: none;
}

a:hover {
  border-bottom: 1px solid yellow;
}

a:visited {
  color: wheat;
}

/******* SPLASH PAGE ******/
.splash {
  text-align: center;
  color: black;
  height: 100%;
  width: 100%;
  background-image: url("black_geo.jpg");
}

.splash_black_bar a:visited{
  color: white;
}

.splash_black_bar{
  background-color: black;
  width: 100%;
}

.top{
  height: 30%;
  background-image: url("black_geo.jpg");
}

.bottom{
  background-image: url("black_geo.jpg");
  background-repeat: no-repeat;
  bottom: 0;
}

.splash_title {
  font-size: 120px;
  color: white;
}

.splash_subtitle{
  color:white;
  font-size: 30px;
}

.login_signup_panel {
  display: block;
  color: white;
  width: 100%;
  font-size: 20px;
}

.button{
  font-family: "Spinnaker";
  font-size: 16px;
  background-color: white;
  border: 0px;
}
/*************/

header {
  background-color: black;
  padding: 0px;
  border: 0px;
}

.site_title {
  font-family: "Spinnaker";
  font-size: 80px;
  color: white;
  display: inline-block;
}

.nav {
  float: right;
  font-family: "Spinnaker";
  padding-right: 20px;
  padding-top: 20px;
  color: white;
}

.piece_view {
  height: 400px;
  width: 200px;
  background: center;
  background-size: 180px auto;
  background-repeat: no-repeat;
  border: 1px solid wheat;
  text-align: center;
}

tr {
  display: inline-block;
  padding: 30px;
}

.piece_links{
  text-align: right;
  display: block;
  bottom: 0;
}